# Application
NODE_ENV=development
VITE_API_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/scout_analytics
DB_SSL=false

# Azure Data Lake Storage Configuration (NEW)
# Direct access to your scoutdata blob storage
VITE_AZURE_STORAGE_ACCOUNT=scoutdata
VITE_AZURE_CONTAINER=raw/scout-seed

# Option 1: SAS Token (Recommended for client-side access)
# Generate a SAS token with read permissions for the container
VITE_AZURE_SAS_TOKEN=your_sas_token_here

# Option 2: Storage Account Key (Less secure for client-side)
VITE_AZURE_STORAGE_KEY=your_storage_key_here

# Azure Services
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

# Azure OpenAI Configuration (for AI chatbot)
AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Client-side AI Configuration (for Vercel AI SDK)
VITE_AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
VITE_AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Authentication
JWT_SECRET=your_super_secret_jwt_key

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# Scout-Prod Feature Flags (NEW)
VITE_ENABLE_DATA_LAKE=true
VITE_ENABLE_MOCK_FALLBACK=true
VITE_ENABLE_DEBUG_LOGGING=false
VITE_CACHE_TTL_MINUTES=15